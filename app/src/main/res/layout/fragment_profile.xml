<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0.1dp"
    android:paddingBottom="0.1dp"
    tools:context=".">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutProfileBackBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/constraintLayoutProfileBackBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">


        <Button
            android:id="@+id/buttonBack"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.1dp"
            android:backgroundTint="@color/material_dynamic_primary100"
            android:fontFamily="@font/inter_bold"
            android:text="<-"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:iconPadding="0.1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/MyProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.487" />

        <TextView
            android:id="@+id/MyProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_black"
            android:text="@string/profile_name"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonBack"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutProfileMainSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        app:layout_constraintTop_toBottomOf="@id/constraintLayoutProfileBackBar"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="0dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/roundedimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/download" />
                />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <TextView
            android:id="@+id/NombreBiker"
            android:layout_width="281dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="@string/profile_Biker"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/mailBiker"
            android:layout_width="281dp"
            android:layout_height="20dp"
            android:text="@string/profile_mail"
            android:textAlignment="center"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="154dp" />

        <TextView
            android:id="@+id/descriptionBiker"
            android:layout_width="263dp"
            android:layout_height="60dp"
            android:text="@string/profile_description"
            android:textAlignment="center"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="186dp" />

        <Button
            android:id="@+id/buttonEditarPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:backgroundTint="@color/black"
            android:onClick="signup"
            android:text="@string/btn_profileEdition"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="10dp"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="281dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutProfileInfo"
        android:layout_width="410dp"
        android:layout_height="208dp"
        app:layout_constraintTop_toBottomOf="@id/constraintLayoutProfileMainSection"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/rutasBiker"
            android:layout_width="285dp"
            android:layout_height="44dp"
            android:text="@string/txt_routes"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="18dp" />

        <TextView
            android:id="@+id/gruposBiker"
            android:layout_width="279dp"
            android:layout_height="59dp"
            android:text="@string/txt_profileGroups"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="75dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>